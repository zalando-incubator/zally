{
  "name": "@zalando/zally-web-ui",
  "version": "0.4.0",
  "description": "Zally API Linter Web UI",
  "main": "src/server/index.js",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev":
      "webpack-dev-server --config ./webpack/dev.js & NODE_ENV=development nodemon server.js",
    "build": "webpack --config ./webpack/prod.js",
    "lint": "eslint src --ext .jsx --ext .js",
    "lint:fix": "eslint src --ext .jsx --ext .js --fix",
    "lint:report":
      "yarn run lint -- -f checkstyle --output-file target/checkstyle.xml",
    "jest": "NODE_ENV=test jest --coverage",
    "test": "yarn run lint:report && yarn run jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "codecov": "codecov -F webui -f target/coverage/lcov.info",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zalando/zally.git"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json,scss}": ["prettier --write", "git add"]
    }
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "keywords": ["API", "Linter", "Zally"],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zalando/zally/issues"
  },
  "homepage": "https://github.com/zalando/zally/web-ui#readme",
  "dependencies": {
    "aurelia-fetch-client": "1.1.3",
    "compression": "1.7.1",
    "dress-code": "2.3.0",
    "express": "4.16.2",
    "history": "4.7.2",
    "lodash": "4.17.4",
    "pug": "2.0.0-rc.4",
    "react": "16.2.0",
    "react-ace": "5.8.0",
    "react-dom": "16.2.0",
    "react-router": "4.2.0",
    "react-router-bootstrap": "0.24.4",
    "react-router-dom": "4.2.2",
    "request": "2.83.0",
    "styled-components": "2.2.4",
    "url-search-params-polyfill": "2.0.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "codecov": "3.0.0",
    "css-loader": "0.28.7",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "eslint": "4.13.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-jest": "21.4.2",
    "eslint-plugin-react": "7.5.1",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "6.0.0",
    "node-sass": "4.7.2",
    "nodemon": "1.12.7",
    "prettier": "1.9.2",
    "raf": "3.4.0",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.0",
    "supertest": "3.0.0",
    "uglifyjs-webpack-plugin": "1.1.4",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "2.9.1",
    "webpack-dev-server": "2.9.7",
    "webpack-merge": "4.1.1"
  }
}
