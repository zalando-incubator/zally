{
  "name": "zally-web-ui",
  "version": "0.1.0",
  "description": "Zally API Linter Web UI",
  "main": "src/server/index.js",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/server/index.js",
    "dev": "webpack-dev-server & NODE_ENV=development nodemon src/server/index.js",
    "build": "webpack -p",
    "docker:build": "npm run build && scm-source > scm-source.json && docker build -t pierone.stups.zalan.do/architecture/zally-web-ui:${npm_package_version}-$(date +%s) .",
    "lint": "eslint src test",
    "lint:checkstyle-report": "npm run lint -- -f checkstyle --output-file target/checkstyle.xml",
    "test:unit": "mocha test/unit/server/**/*.spec.js",
    "test:unit:coverage": "istanbul cover _mocha -- test/unit/server/**/*.spec.js",
    "test:unit:junit": "npm run test:unit -- --reporter mocha-junit-reporter --reporter-options mochaFile=./target/unit/junit.xml",
    "test": "npm run lint && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zalando-incubator/zally.git"
  },
  "keywords": [
    "API",
    "Linter",
    "Zally"
  ],
  "private": true,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zalando-incubator/zally/issues"
  },
  "homepage": "https://github.com/zalando-incubator/zally#readme",
  "dependencies": {
    "body-parser": "1.17.1",
    "dotenv": "4.0.0",
    "dotenv-parse-variables": "0.0.1",
    "express": "4.15.2",
    "js-yaml": "3.8.2",
    "node-fetch": "1.6.3",
    "oauth2-client-js": "0.0.15",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "request": "2.81.0",
    "whatwg-fetch": "2.0.3",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-core": "6.24.0",
    "babel-loader": "6.4.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-react": "6.23.0",
    "chai": "3.5.0",
    "eslint": "3.18.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "3.2.0",
    "mocha-junit-reporter": "1.13.0",
    "node-scm-source": "0.2.0",
    "nodemon": "1.11.0",
    "proxyquire": "1.7.11",
    "sinon": "2.1.0",
    "sinon-chai": "2.9.0",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.2"
  }
}
